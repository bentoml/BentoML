include README.md
include LICENSE

# include ".cfg" files
graft bentoml/configuration

# include migration files
graft bentoml/migrations
include bentoml/alembic.ini

# include ".conf" file
include bentoml/deployment/sagemaker/sagemaker_nginx.conf

# Don't include examples, tests directory
prune examples
prune tests
prune docs

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
global-exclude __pycache__
include versioneer.py
include bentoml/_version.py
recursive-include bentoml/server/static *
