include README.md
include LICENSE
include MANIFEST.in

# Included in PyPI distribution
include bentoml/*.py
graft bentoml/_internal

exclude .gitignore
exclude .readthedocs.yml
exclude .pep8speaks.yml
exclude codecov.yml
exclude CONTRIBUTING.md
exclude GOVERNANCE.md
exclude CODE_OF_CONDUCT.md
exclude DEVELOPMENT.md
exclude SECURITY.md
exclude Makefile

# Prune directory not to be included in PyPI package
prune requirements
prune tests
prune docker
prune typings
prune scripts
prune hooks
prune docs
prune .github
prune bentoml/testing

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .github
global-exclude .ipynb_checkpoints
global-exclude __pycache__
global-exclude .DS_Store
