{{ header }}
{% set cached = ['arm32v5', 'arm32v6'] %}
{% if 'ubi' in base_image %}
ARG UBIFORMAT

{% endif %}
ARG XX_VERSION={{ xx_version }}

FROM --platform=$BUILDPLATFORM {{ xx_image }}:${XX_VERSION} AS xx

FROM {{ base_image }} as base
{% for key in architectures if key not in cached %}
    {% if 'arm32' in key %}

FROM base as base-arm
    {% elif 'arm64' in key %}

FROM base as base-arm64
    {% elif 'i386' in key %}

FROM base as base-386
    {% else %}

FROM base as base-{{ key }}
    {% endif %}
{% endfor %}

FROM base-${TARGETARCH}

ARG TARGETARCH

COPY --from=xx / /

{% for key, value in envars.items() if key not in ["BENTOML_VERSION","LC_ALL","LANG"] %}
{% if key in ["PYTHON_VERSION"] %}
ARG {{ key }}

{% else %}
ENV {{ key }}={{ value }}

{% endif %}
{% endfor %}
# needed for string substitution
SHELL ["/bin/bash","-exo", "pipefail", "-c"]

USER root

RUN --mount=type=cache,sharing=shared,target=/var/cache/yum \
    yum upgrade -y \
    && yum install -y wget git ca-certificates curl gcc gcc-c++ make \
    && yum clean all
