{{ metadata.header }}
{% set cached = ['arm32v5', 'arm32v6'] %}
ARG PYTHON_VERSION

FROM --platform=$BUILDPLATFORM {{ metadata.package }}:{{ build_tag }} as base

RUN --mount=type=cache,target=/var/cache/apt --mount=type=cache,target=/var/lib/apt \
    xx-apt-get install -q -y --no-install-recommends git \
    && xx-apt-get clean \
    && rm -rf /var/lib/apt/lists/*

ARG MAMBA_DOCKERFILE_ACTIVATE 1

RUN --mount=type=cache,mode=0777,target=/root/.cache/pip \
    pip install -U git+https://github.com/bentoml/bentoml.git@main
{% for key in metadata.arch_context if key not in cached %}
    {% if 'arm' in key %}

FROM base as base-arm
    {% elif 'i386' in key %}

FROM base as base-386
    {% else %}

FROM base as base-{{ key }}
    {% endif %}
{% endfor %}

FROM base-${TARGETARCH}

ARG TARGETARCH

ARG TARGETPLATFORM

RUN xx-apt-get purge -y -q gcc curl git \
    && rm -rf /var/lib/{apt,dpkg,cache,log}
