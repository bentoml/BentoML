{{ metadata.header }}
{% set cached = ['arm32v5', 'arm32v6'] %}
ARG PYTHON_VERSION

FROM --platform=$BUILDPLATFORM {{ metadata.organization }}/{{ build_tag }} as base

SHELL ["/bin/bash", "-eo", "pipefail", "-c"]

ENV BENTOML_VERSION={{ metadata.envars['BENTOML_VERSION'] }}

RUN --mount=type=cache,target=/var/cache/apk \
    xx-apk --update add build-base git musl-dev linux-headers g++

RUN pip install -U git+https://github.com/bentoml/bentoml.git@main
{% for key in metadata.arch_context if key not in cached -%}
    {% if 'arm64' in key %}

FROM base as base-arm64
    {% elif 'arm' in key %}

FROM base as base-arm
    {% elif 'i386' in key %}

FROM base as base-386
    {% else %}

FROM base as base-{{ key }}
    {% endif %}
{% endfor %}

FROM base-${TARGETARCH}

ARG TARGETARCH

ARG TARGETPLATFORM

