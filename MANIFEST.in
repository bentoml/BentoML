include README.md
include LICENSE

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
global-exclude __pycache__

# special files to include with PyPI distribution
include versioneer.py
include bentoml/_version.py
graft bentoml/server/static
graft bentoml/configuration

# include migration files
graft bentoml/migrations
include bentoml/alembic.ini

# include yatai server UI distribution files
graft bentoml/yatai/web/dist
prune bentoml/yatai/web/node_modules

# include ".conf" file
include bentoml/deployment/sagemaker/sagemaker_nginx.conf

# exclude e2e_tests files
prune e2e_tests
prune tests
prune benchmark
