{{ metadata.header }}
{% set cached = ['arm32v5', 'arm32v6'] %}
{% set pip_options = ['--no-cache-dir'] %}
ARG PYTHON_VERSION

FROM --platform=$BUILDPLATFORM {{ metadata.package }}:{{ build_tag }} as base

ENV BENTOML_VERSION={{ metadata.envars['BENTOML_VERSION'] }}

ARG MAMBA_DOCKERFILE_ACTIVATE 1

RUN pip install bentoml==${BENTOML_VERSION} {{ pip_options|join(' ') }}

RUN xx-apt-get purge --auto-remove -y gcc python3-dev \
    && xx-apt-get clean \
    && rm -rf /var/lib/{apt,dpkg,cache,log}
{% for key in metadata.arch_context if key not in cached %}
    {% if 'arm64' in key %}

FROM base as base-arm64
    {% elif 'arm' in key %}

FROM base as base-arm
    {% elif 'i386' in key %}

FROM base as base-386
    {% else %}

FROM base as base-{{ key }}
    {% endif %}
{% endfor %}

FROM base-${TARGETARCH}

ARG TARGETARCH

ARG TARGETPLATFORM
